<% layout('layout') -%>
	
	<nav>
		<div class="navwrap">
			<% if(!auth){ %>
			<a href="/login">登入</a>
			<a href="/signup">註冊</a>
			<% } %>

			<% if(auth){ %>
			<a href="/user">個人頁面</a>
			<a href="/logout">登出</a>
			<% } %>
		</div>
	</nav>
	<div class="wrap">
		<h1>
			<%= title %>
		</h1>

		<% if(!auth){ %>
		<p>您尚未登入，所以只能瀏覽，若要留言請先登入</p>
		<% } %>

		<% if(auth){ %>
		<form class="form" action="/messageBoard" method="post">
			<input class="text" type="text" name="content" placeholder="填寫留言訊息">
			<input class="btn" type="submit" value="送出">
			<p class="error-message">
				<%= errors %>
			</p>
		</form>
		<% } %>

		<ul>
			<% for(item in list){ %>
			<li class="list">
				<span class="nickname">
					<%= list[item].nickname %> :
				</span>
				<span class="content">
					<%= list[item].content %>
				</span>
			</li>
			<% } %>
		</ul>

	</div>
	
